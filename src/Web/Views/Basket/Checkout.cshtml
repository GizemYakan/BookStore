@model CheckoutViewModel
@{
    ViewData["Title"] = "Checkout";
}
<h1 class="mt-4">Checkout</h1>
<div class="row">
    <div class="col-md-4 order-md-2 mb-4">
        <h4 class="d-flex justify-content-between align-items-center mb-3">
            <span class="text-muted">Your cart</span>
            <span class="badge badge-secondary badge-pill">@Model.BasketItems.Count</span>
        </h4>
        <ul class="list-group mb-3">
            @foreach (var item in Model.BasketItems)
            {

                <li class="list-group-item d-flex justify-content-between lh-condensed">
                    <div>
                        <h6 class="my-0">@item.ProductName</h6>
                        <small class="text-muted">X @item.Quantity</small>
                    </div>
                    <span class="text-muted">@item.Price.ToString("c2")</span>
                </li>
            }
            <li class="list-group-item d-flex justify-content-between">
                <span>Total (USD)</span>
                <strong>@Model.TotalPrice().ToString("c2")</strong>
            </li>
        </ul>

    </div>
    <div class="col-md-8 order-md-1">
        <h4 class="mb-3">Billing address</h4>
        <form class="needs-validation" novalidate>
            <div class="mb-3">
                <label asp-for="Street">Address</label>
                <input asp-for="Street" class="form-control" placeholder="1234 Main St" required>
                <span asp-validation-for="Street"></span>
            </div>

            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="Country">Country</label>
                    <select asp-for="Country" class="custom-select d-block w-100" required>
                        <option value="">Choose...</option>
                        <option>Turkey</option>
                        <option>United States</option>
                    </select>
                    <span asp-validation-for="Country"></span>
                </div>
                <div class="col-md-3 mb-3">
                    <label asp-for="State">State</label>
                    <select asp-for="State" class="custom-select d-block w-100" required>
                        <option value="">Choose...</option>
                        <option>California</option>
                        <option>Ankara</option>
                    </select>
                    <span asp-validation-for="State"></span>
                </div>
                <div class="col-md-3 mb-2">
                    <label asp-for="City">Zip</label>
                    <input asp-for="City" type="text" class="form-control" placeholder="" required>
                    <span asp-validation-for="City"></span>
                </div>
                <div class="col-md-2 mb-2">
                    <label asp-for="ZipCode">Zip</label>
                    <input asp-for="ZipCode" type="text" class="form-control" placeholder="" required>
                    <span asp-validation-for="ZipCode"></span>
                </div>
            </div>
            <hr class="mb-4">

            <h4 class="mb-3">Payment</h4>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="CCHolderName">Name on card</label>
                    <input asp-for="CCHolderName" type="text" class="form-control" placeholder="">
                    <small class="text-muted">Full name as displayed on card</small>
                    <span asp-validation-for="CCHolderName"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="CCNumber">Credit card number</label>
                    <input asp-for="CCNumber" type="text" class="form-control" placeholder="">
                    <span asp-validation-for="CCNumber"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3 mb-3">
                    <label asp-for="CCExpiration">Expiration</label>
                    <input asp-for="CCExpiration" type="text" class="form-control" placeholder="">
                    <span asp-validation-for="CCExpiration"></span>
                </div>
                <div class="col-md-3 mb-3">
                    <label asp-for="CCCvv" for="cc-cvv">CVV</label>
                    <input asp-for="CCCvv" type="text" class="form-control" placeholder="" required>
                    <span asp-validation-for="CCCvv"></span>
                </div>
            </div>
            <hr class="mb-4">
            <button class="btn btn-primary btn-lg btn-block" type="submit">Complete Payment</button>
        </form>
    </div>
</div>
